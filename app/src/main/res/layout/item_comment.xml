<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemComment_profile_image"
        android:src="@drawable/ic_account"
        android:layout_margin="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/itemComment_profile_id"
        android:layout_margin="8dp"
        android:text="userID"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/itemComment_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itemComment_comment"
        android:layout_margin="8dp"
        android:text="This is sample data. If this content has comments, it will be shown on this layout page."
        android:layout_below="@+id/itemComment_profile_id"
        android:layout_toRightOf="@+id/itemComment_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
